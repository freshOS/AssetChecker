#!/bin/sh

#  Figure out where we're being called from
DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )

# Path to Swift script file
swiftFile="${DIR}/Sources/AssetChecker/main.swift"

SOURCE=$SRCROOT
CATALOG=""
IGNORE=""

while [[ $# > 0 ]]
do
key="$1"

case $key in
    -s|--source)
    SOURCE="$2"
    shift # past argument
    ;;
    -c|--catalog)
    CATALOG="$2"
    shift # past argument
    ;;
    -i|--ignore)
    IGNORE="$2"
    shift # past argument
    ;;
    *)

    # unknown option
    ;;
esac
shift # past argument or value
done

cmd="$swiftFile source:$SOURCE catalog:$CATALOG ignore:$IGNORE"
echo $cmd
$cmd
